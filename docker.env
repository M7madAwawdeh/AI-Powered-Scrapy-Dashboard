# Docker Environment Configuration for AI-Powered Scrapy Dashboard
# Copy this file to .env.docker and modify as needed

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_scrapy_dashboard
DB_USER=postgres
DB_PASSWORD=postgres_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Scraping Configuration
SCRAPING_DELAY=2
SCRAPING_TIMEOUT=30
SCRAPING_RETRY_TIMES=3

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scrapy_dashboard.log

# Production Settings
DEBUG=False
ENVIRONMENT=production

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600

# AI Model Parameters
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_REQUEST_TIMEOUT=60

# Scraping Advanced Settings
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_CONCURRENT_REQUESTS=2
SCRAPING_AUTOTHROTTLE=True

# Dashboard Advanced Settings
DASHBOARD_THEME=light
DASHBOARD_LAYOUT=wide
DASHBOARD_INITIAL_SIDEBAR_STATE=expanded

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Performance Settings
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
CACHE_TTL=3600 